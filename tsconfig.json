{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsxdev",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@view/*": ["src/view/*"],
      "@assets/*": ["src/assets/*"],
      "@router/*": ["src/router/*"],
      "@router": ["src/router"],
      "@api": ["src/net"],
    },
  },
  "include": ["src"],
  "references": [{
    "path": "./tsconfig.node.json"
  }]
}